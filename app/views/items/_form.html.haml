%h1 フォームです
= form_with model: @item, local: true do |f|
  .form-group.card-title
    =f.label :images do
      商品画像
    =f.file_field :images, class:"form-control"
  
  .form-group
    =f.label :name do
      商品名
    =f.text_field :name
  
  .form-group
    =f.label :text do
      商品説明
    =f.text_field :text

  .form-group
    =f.label :Category do
      商品カテゴリー
    =f.text_field :Category

  .form-group
    =f.label :brand do
      ブランド
    =f.text_field :brand

  .form-group
    =f.label :status do
      商品の状態
    =f.text_field :status
  
  .form-group
    =f.label :deliveryfee do
      配送料の負担
    =f.text_field :deliveryfee
  
  .form-group
    =f.label :shippingregion do
      発送元の地域
    =f.text_field :shippingregion
  
  .form-group
    =f.label :daysuntilshipping do
      発送までの日数
    =f.text_field :daysuntilshipping
  
  .form-group
    =f.label :price do
      販売価格
    =f.text_field :price
  
  .form-group
    =f.submit "出品"
